<div class="container">
<h1>New Player</h1>

<section class='add-coach'>
<div class="coach-form">
  <%= form_for(@coach) do |t| %>
		<%= t.label :first_name %>
		<%= t.text_field :first_name %>

		<%= t.label :last_name %>
		<%= t.text_field :last_name %>

		<%= t.label :profile_picture %>
		<%= t.text_field :profile_picture%>

		<%= t.label :ranking %>
		<%= t.text_field :ranking  %>

		<%= t.label :about %>
		<%= t.text_field :about  %>

		<%= t.label :club %>
		<%= t.text_field :club  %>

	<%= t.submit "Join SFT!", class: "btn btn-large btn-primary" %> 

	<% end %>

	<h4><a href="/players" class="btn btn-primary">Actually I want to go back to all coaches</a></h4>

</div>
</section>
</div>